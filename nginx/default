server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name bhkw.informaticore.net;

    include /config/nginx/ssl.conf;

    location / {
        proxy_pass         http://web-service:1337;
    }
}